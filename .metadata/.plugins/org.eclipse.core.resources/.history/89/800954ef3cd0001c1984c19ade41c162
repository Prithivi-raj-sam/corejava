package Threads;

public class ThreadBasic {
	public static void main(String[] args) {
//		A thread that is Stored can not be restarted , isAlive will be false
//		Thread are created, managed , execute and stopped by OS
		Thread t1=Thread.currentThread();
		Thread t2=Thread.currentThread();
		try{
			 
			 System.out.println("Th ID: " +t1.getId() );
			 System.out.println("Th State: " +t1.getState() );
			 System.out.println("Th Priority: " +t1.getPriority());
			 System.out.println("Th ISAlive: " +t1.isAlive());
			 System.out.println("Th Max Priority: " +Thread.MAX_PRIORITY);
			 System.out.println("Th Min priority: " +Thread.MIN_PRIORITY);
		 }
	catch(Exception e)
		 {
			 System.out.println(e.getMessage());
		 }
		try {
			Thread.sleep(1000);
			System.out.println("Th ID: " +t2.getId() );
			 System.out.println("Th State: " +t2.getState() );
			 System.out.println("Th Priority: " +t2.getPriority());
			 System.out.println("Th ISAlive: " +t2.isAlive());
			 System.out.println("Th Max Priority: " +Thread.MAX_PRIORITY);
			 System.out.println("Th Min priority: " +Thread.MIN_PRIORITY);
		}catch(Exception e)
		 {
			 System.out.println(e.getMessage());
		 }
	    t1.start();
	    t2.start();
	}

}
